---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle, Button } from '@repo/ui';

const title = `Features - ${import.meta.env.APP_NAME || 'NexusPoint'}`;
const description = `Discover the powerful point-of-sale features of ${import.meta.env.APP_NAME || 'NexusPoint'} - designed for modern retail and hospitality.`;

const featureCategories = [
  {
    title: "Sales & Checkout",
    icon: "ðŸ’³",
    features: [
      {
        title: "Lightning Fast Checkout",
        description: "Complete transactions in seconds with our optimized UI."
      },
      {
        title: "Split Payments",
        description: "Easily split bills between multiple customers and payment methods."
      },
      {
        title: "Digital Receipts",
        description: "Send receipts via email or SMS. Save paper and stay connected."
      },
      {
        title: "Offline Mode",
        description: "Keep selling even when your internet goes down. Syncs later."
      }
    ]
  },
  {
    title: "Inventory Management",
    icon: "ðŸ“¦",
    features: [
      {
        title: "Real-time Tracking",
        description: "Inventory levels update instantly across all your stores."
      },
      {
        title: "Low Stock Alerts",
        description: "Get notified before you run out of your best-selling items."
      },
      {
        title: "Automated POs",
        description: "Generate purchase orders automatically based on stock levels."
      },
      {
        title: "Multi-location Sync",
        description: "Manage stock across multiple warehouses and storefronts."
      }
    ]
  },
  {
    title: "Staff & Operations",
    icon: "ðŸ‘¥",
    features: [
      {
        title: "Smart Scheduling",
        description: "Build schedules based on predicted sales and staff availability."
      },
      {
        title: "Role-based Permissions",
        description: "Control access to sensitive data and critical functions."
      },
      {
        title: "Performance Metrics",
        description: "Track sales per staff member to reward top performers."
      },
      {
        title: "Time Clock",
        description: "Integrated clock-in/out with photo verification."
      }
    ]
  },
  {
    title: "Analytics & Insights",
    icon: "ðŸ“Š",
    features: [
      {
        title: "Visual Dashboards",
        description: "See your business health at a glance with beautiful charts."
      },
      {
        title: "Custom Reports",
        description: "Build the reports you need with our drag-and-drop builder."
      },
      {
        title: "Customer Insights",
        description: "Understand buying patterns and customer loyalty."
      },
      {
        title: "Financial Sync",
        description: "Export data directly to QuickBooks or Xero."
      }
    ]
  }
];
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <!-- Hero Section -->
    <div class="text-center mb-24">
      <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-primary/10 border border-primary/20 mb-6">
        <span class="text-xs font-bold text-primary uppercase tracking-wider">Comprehensive Tools</span>
      </div>
      <h1 class="text-4xl md:text-6xl font-black tracking-tight mb-6">
        Everything you need to<br/>
        <span class="text-primary">grow your business.</span>
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed">
        {import.meta.env.APP_NAME || 'NexusPoint'} provides a complete suite of tools designed to help you run your business more efficiently and profitably.
      </p>
    </div>

    <!-- Feature Categories -->
    {featureCategories.map((category) => (
      <section class="mb-24">
        <div class="flex items-center gap-4 mb-12 border-b pb-6">
          <span class="text-4xl p-3 bg-muted rounded-2xl">{category.icon}</span>
          <h2 class="text-3xl font-black tracking-tight">{category.title}</h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {category.features.map((feature) => (
            <Card className="border-2 shadow-sm hover:shadow-md transition-all group" client:visible>
              <CardHeader>
                <CardTitle className="text-xl font-bold group-hover:text-primary transition-colors">{feature.title}</CardTitle>
                <CardDescription className="text-base font-medium leading-relaxed">{feature.description}</CardDescription>
              </CardHeader>
            </Card>
          ))}
        </div>
      </section>
    ))}

    <!-- Tech Stack Detail - Refocused for Business -->
    <section class="mb-24 bg-primary p-12 md:p-20 rounded-[3rem] text-primary-foreground relative overflow-hidden">
       <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -mr-32 -mt-32 blur-3xl"></div>
       <div class="absolute bottom-0 left-0 w-64 h-64 bg-secondary/20 rounded-full -ml-32 -mb-32 blur-3xl"></div>
       
      <h2 class="text-3xl md:text-5xl font-black tracking-tight mb-8 text-center relative z-10">
        Scalable & Secure
      </h2>
      <p class="text-xl text-primary-foreground/80 max-w-3xl mx-auto text-center mb-16 relative z-10 leading-relaxed font-medium">
        We use world-class infrastructure to ensure your business data is always safe, accessible, and fast, no matter where you are or how many stores you have.
      </p>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 relative z-10">
        {[
          { name: "Bank-Level Security", category: "Data Protection" },
          { name: "99.9% Uptime", category: "Reliability" },
          { name: "Real-time Sync", category: "Performance" },
          { name: "Daily Backups", category: "Safety" },
          { name: "End-to-End Encryption", category: "Privacy" },
          { name: "Global Edge Network", category: "Speed" },
          { name: "GDPR Compliant", category: "Regulation" },
          { name: "24/7 Monitoring", category: "Assurance" }
        ].map((tech) => (
          <div class="bg-white/10 backdrop-blur-md rounded-2xl p-6 border border-white/20 hover:bg-white/20 transition-colors">
            <div class="font-bold text-lg">{tech.name}</div>
            <div class="text-xs text-primary-foreground/60 uppercase tracking-widest font-black mt-1">{tech.category}</div>
          </div>
        ))}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="text-center py-12">
      <h2 class="text-4xl font-black tracking-tight mb-6">
        Ready to see it in action?
      </h2>
      <p class="text-muted-foreground text-xl mb-10 max-w-2xl mx-auto leading-relaxed">
        Join the businesses that have increased their efficiency by over 30% with {import.meta.env.APP_NAME || 'NexusPoint'}.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button size="lg" className="h-14 px-10 text-lg font-bold rounded-full" client:visible>
          Start Free Trial
        </Button>
        <Button variant="outline" size="lg" className="h-14 px-10 text-lg font-bold rounded-full" client:visible>
          Book a Demo
        </Button>
      </div>
    </section>
  </div>
</BaseLayout>