---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button, Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle, Separator } from '@repo/ui';

const title = `Pricing - ${import.meta.env.APP_NAME || 'NexusPoint'}`;
const description = `Simple and transparent pricing plans for ${import.meta.env.APP_NAME || 'NexusPoint'}. Choose the plan that fits your business needs.`;

const plans = [
  {
    name: "Standard",
    description: "For small boutiques and cafes.",
    price: "$49",
    features: [
      "100 Products",
      "5 Staff Accounts",
      "Real-time Inventory",
      "Email Support",
      "Mobile App Access"
    ],
    cta: "Choose Standard",
    popular: false
  },
  {
    name: "Pro",
    description: "For growing restaurants and retail.",
    price: "$99",
    features: [
      "Unlimited Products",
      "Unlimited Staff",
      "Advanced Analytics",
      "Priority Support",
      "Multi-store Sync",
      "Kitchen Display System"
    ],
    cta: "Choose Pro",
    popular: true
  },
  {
    name: "Enterprise",
    description: "For large franchises and malls.",
    price: "$199",
    features: [
      "Unlimited Everything",
      "Dedicated Account Manager",
      "Custom Integrations",
      "24/7 Phone Support",
      "White-label Option",
      "SLA Guarantee"
    ],
    cta: "Contact Sales",
    popular: false
  }
];
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <!-- Hero Section -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-primary/10 border border-primary/20 mb-6">
        <span class="text-xs font-bold text-primary uppercase tracking-wider">Pricing Plans</span>
      </div>
      <h1 class="text-4xl md:text-6xl font-black tracking-tight mb-6">
        Simple pricing for<br/>
        <span class="text-primary">every business size.</span>
      </h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed">
        No hidden fees. No long-term contracts. Start with a 14-day free trial and upgrade anytime.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-24">
      {plans.map((plan) => (
        <Card className={`relative border-2 flex flex-col h-full ${plan.popular ? 'border-primary shadow-xl shadow-primary/10 scale-105 z-10' : 'shadow-md'}`} client:visible>
          {plan.popular && (
            <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-primary text-primary-foreground text-[10px] font-black uppercase tracking-widest px-4 py-1.5 rounded-full">
              Most Popular
            </div>
          )}
          <CardHeader className="p-8">
            <CardTitle className="text-2xl font-black">{plan.name}</CardTitle>
            <CardDescription className="text-base font-medium mt-2">{plan.description}</CardDescription>
            <div class="mt-6 flex items-baseline gap-1">
              <span class="text-5xl font-black tracking-tight">{plan.price}</span>
              <span class="text-muted-foreground font-bold">/mo</span>
            </div>
          </CardHeader>
          <CardContent className="p-8 pt-0 flex-grow">
            <Separator className="mb-6" />
            <ul class="space-y-4">
              {plan.features.map((feature) => (
                <li class="flex items-center gap-3">
                  <div class="w-5 h-5 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                    <svg class="w-3 h-3 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <span class="text-sm font-bold text-muted-foreground">{feature}</span>
                </li>
              ))}
            </ul>
          </CardContent>
          <CardFooter className="p-8 pt-0">
            <Button className={`w-full h-12 text-base font-black rounded-xl ${plan.popular ? '' : 'variant-outline'}`} variant={plan.popular ? 'default' : 'outline'} client:visible>
              {plan.cta}
            </Button>
          </CardFooter>
        </Card>
      ))}
    </div>

    <!-- FAQ Section -->
    <section class="max-w-4xl mx-auto mb-24">
       <h2 class="text-3xl font-black tracking-tight mb-12 text-center">Frequently Asked Questions</h2>
       <div class="grid gap-6">
          <Card className="border-2" client:visible>
             <CardHeader>
                <CardTitle className="text-lg font-bold">Can I switch plans later?</CardTitle>
                <CardDescription className="text-base font-medium">Yes, you can upgrade or downgrade your plan at any time. Changes will be reflected in your next billing cycle.</CardDescription>
             </CardHeader>
          </Card>
          <Card className="border-2" client:visible>
             <CardHeader>
                <CardTitle className="text-lg font-bold">What payment methods do you accept?</CardTitle>
                <CardDescription className="text-base font-medium">We accept all major credit cards, PayPal, and bank transfers for Enterprise plans.</CardDescription>
             </CardHeader>
          </Card>
          <Card className="border-2" client:visible>
             <CardHeader>
                <CardTitle className="text-lg font-bold">Is there a free trial?</CardTitle>
                <CardDescription className="text-base font-medium">Absolutely! Every plan starts with a 14-day full-featured free trial. No credit card required.</CardDescription>
             </CardHeader>
          </Card>
       </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-muted/30 border-2 rounded-[3rem] p-12 md:p-20 text-center">
      <h2 class="text-3xl md:text-5xl font-black tracking-tight mb-6">
        Need a custom solution?
      </h2>
      <p class="text-xl text-muted-foreground mb-10 max-w-2xl mx-auto leading-relaxed">
        If your business has unique requirements or handles over $10M in annual sales, let's talk about a custom enterprise plan.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button size="lg" className="h-14 px-10 text-lg font-bold rounded-full" client:visible>
          Talk to an Expert
        </Button>
      </div>
    </section>
  </div>
</BaseLayout>