---
import { Button, Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from '@repo/ui';
import BaseLayout from '../layouts/BaseLayout.astro';

// {import.meta.env.APP_NAME || 'NexusPoint'} - Simple POS System Landing Page
---

<BaseLayout 
  title={`${import.meta.env.APP_NAME || 'NexusPoint'} - Run your store the simple way`}
  description="Simple, modern point-of-sale system that helps you sell faster, track inventory, and keep customers happy."
>
  <!-- Hero Section -->
  <section class="relative pt-20 pb-20 lg:pt-32 lg:pb-32 overflow-hidden">
    <div class="container mx-auto px-6 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Left: Content -->
        <div class="flex flex-col items-start space-y-8">
          <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-primary/10 border border-primary/20">
            <span class="w-1.5 h-1.5 rounded-full bg-primary"></span>
            <span class="text-xs font-medium text-primary tracking-wide uppercase">Simple & Reliable</span>
          </div>

          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight leading-tight">
            Run your store<br/>
            <span class="text-primary">the simple way.</span>
          </h1>

          <p class="text-xl text-muted-foreground max-w-lg leading-relaxed">
            {import.meta.env.APP_NAME || 'NexusPoint'} is a simple, modern point-of-sale system that helps you sell faster,
            track inventory, and keep customers happy. Works on any device.
          </p>

          <div class="flex flex-wrap gap-4 pt-4">
            <Button size="lg" className="rounded-full px-8 h-12 text-base font-semibold" client:visible>
              Start Free Trial
            </Button>
            <Button variant="outline" size="lg" className="rounded-full px-8 h-12 text-base font-semibold" client:visible>
              Watch Demo
            </Button>
          </div>

          <!-- Stats -->
          <div class="grid grid-cols-3 gap-8 mt-8 pt-8 border-t w-full max-w-md">
            <div>
              <div class="text-3xl font-bold">40%</div>
              <div class="text-sm text-muted-foreground mt-1 font-medium">Less waste</div>
            </div>
            <div>
              <div class="text-3xl font-bold">3.2s</div>
              <div class="text-sm text-muted-foreground mt-1 font-medium">Avg checkout</div>
            </div>
            <div>
              <div class="text-3xl font-bold">99.9%</div>
              <div class="text-sm text-muted-foreground mt-1 font-medium">Uptime</div>
            </div>
          </div>
        </div>

        <!-- Right: Product Preview -->
        <div class="relative lg:ml-auto w-full max-w-xl group">
          <div class="absolute -inset-4 bg-gradient-to-tr from-primary/20 to-secondary/20 rounded-3xl blur-2xl group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
          <Card className="relative border-2 shadow-2xl overflow-hidden rounded-2xl">
            <CardHeader class="border-b bg-muted/30 px-6 py-4">
              <div class="flex items-center justify-between">
                <CardTitle className="text-lg font-semibold">New Sale</CardTitle>
                <span class="text-xs font-medium text-muted-foreground uppercase tracking-wider">Table 5</span>
              </div>
            </CardHeader>
            <CardContent className="p-6 space-y-4">
              <div class="space-y-3">
                <div class="flex items-center justify-between text-sm">
                  <span class="text-muted-foreground">Coffee (Large)</span>
                  <span class="font-semibold">$4.50</span>
                </div>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-muted-foreground">Croissant</span>
                  <span class="font-semibold">$3.25</span>
                </div>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-muted-foreground">Orange Juice</span>
                  <span class="font-semibold">$5.00</span>
                </div>
              </div>
              <div class="border-t pt-4 mt-4">
                <div class="flex items-center justify-between">
                  <span class="text-lg font-bold">Total</span>
                  <span class="text-2xl font-black text-primary">$12.75</span>
                </div>
              </div>
            </CardContent>
            <CardFooter className="p-6 pt-0">
              <Button className="w-full h-12 text-base font-bold rounded-xl" client:visible>
                Pay Now
              </Button>
            </CardFooter>
          </Card>

          <!-- Floating Info Card -->
          <Card className="absolute -bottom-6 -right-6 shadow-xl border-2 p-4 rounded-xl hidden md:block animate-bounce-slow">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-green-500/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <div class="text-xs font-bold uppercase tracking-tight">Payment received</div>
                <div class="text-lg font-black text-primary">$12.75</div>
              </div>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="py-24 bg-muted/30 border-y">
    <div class="container mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Left: Dashboard Preview -->
        <div class="order-2 lg:order-1">
          <Card className="border-2 shadow-xl overflow-hidden rounded-2xl">
            <CardHeader class="border-b bg-background px-6 py-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                  </div>
                  <div>
                    <CardTitle className="text-sm font-bold">Today's Sales</CardTitle>
                    <CardDescription className="text-xs">Live updates</CardDescription>
                  </div>
                </div>
                <div class="flex items-center gap-2 px-2.5 py-1 rounded-full bg-green-500/10 text-green-600 border border-green-500/20">
                  <div class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></div>
                  <span class="text-xs font-bold">+12.4%</span>
                </div>
              </div>
            </CardHeader>
            <CardContent className="p-8">
              <div class="h-48 flex items-end justify-between gap-3 px-2">
                <div class="w-full bg-primary/20 rounded-t-lg transition-all hover:bg-primary/30" style="height: 40%"></div>
                <div class="w-full bg-primary/20 rounded-t-lg transition-all hover:bg-primary/30" style="height: 60%"></div>
                <div class="w-full bg-primary/20 rounded-t-lg transition-all hover:bg-primary/30" style="height: 45%"></div>
                <div class="w-full bg-primary/20 rounded-t-lg transition-all hover:bg-primary/30" style="height: 80%"></div>
                <div class="w-full bg-primary/20 rounded-t-lg transition-all hover:bg-primary/30" style="height: 65%"></div>
                <div class="w-full bg-primary/40 rounded-t-lg transition-all hover:bg-primary/50" style="height: 55%"></div>
                <div class="w-full bg-primary rounded-t-lg transition-all hover:brightness-110" style="height: 95%"></div>
              </div>
              <div class="flex justify-between text-[10px] font-bold text-muted-foreground mt-4 px-2 uppercase tracking-widest">
                <span>Mon</span>
                <span>Tue</span>
                <span>Wed</span>
                <span>Thu</span>
                <span>Fri</span>
                <span>Sat</span>
                <span class="text-primary font-black underline underline-offset-4 decoration-2">Sun</span>
              </div>

              <div class="mt-8 p-4 bg-primary/5 rounded-xl border border-primary/10">
                <div class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-primary mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <p class="text-sm font-medium leading-relaxed">
                    <span class="font-bold text-primary">Smart Insight:</span> Sundays are your busiest days. Stock extra pastries for next week to maximize revenue.
                  </p>
                </div>
              </div>
            </CardContent>
          </Card>
        </div>

        <!-- Right: Content -->
        <div class="order-1 lg:order-2 space-y-8">
          <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-primary/10 border border-primary/20">
            <svg class="w-4 h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
            <span class="text-xs font-bold text-primary uppercase tracking-wider">Inventory Insights</span>
          </div>

          <h2 class="text-4xl md:text-5xl font-bold tracking-tight">
            Know what to stock<br/>
            <span class="text-primary">before you run out.</span>
          </h2>

          <p class="text-lg text-muted-foreground leading-relaxed">
            {import.meta.env.APP_NAME || 'NexusPoint'} tracks your sales patterns to suggest what to order.
            No more guessing. No more empty shelves.
          </p>

          <div class="space-y-6">
            <div class="flex items-start gap-4 p-4 rounded-2xl transition-colors hover:bg-muted/50 border border-transparent hover:border-border group">
              <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold">Sales tracking</h3>
                <p class="text-muted-foreground text-sm">See what sells best and when to restock automatically.</p>
              </div>
            </div>

            <div class="flex items-start gap-4 p-4 rounded-2xl transition-colors hover:bg-muted/50 border border-transparent hover:border-border group">
              <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold">Reduce waste</h3>
                <p class="text-muted-foreground text-sm">Order just enough. Cut spoilage and save thousands yearly.</p>
              </div>
            </div>

            <div class="flex items-start gap-4 p-4 rounded-2xl transition-colors hover:bg-muted/50 border border-transparent hover:border-border group">
              <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold">Multi-store reports</h3>
                <p class="text-muted-foreground text-sm">One beautiful summary for all your locations in real-time.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 border-t relative overflow-hidden">
    <div class="absolute inset-0 bg-primary/5 -z-10"></div>
    <div class="container mx-auto px-6 text-center">
      <div class="max-w-4xl mx-auto space-y-8">
        <h2 class="text-4xl md:text-6xl font-black tracking-tight">
          Ready to simplify your business?
        </h2>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed">
          Join thousands of store owners who run their business smarter with {import.meta.env.APP_NAME || 'NexusPoint'}.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
          <Button size="lg" className="h-14 px-10 text-lg font-bold rounded-full shadow-lg shadow-primary/25" client:visible>
            Start Free 14-Day Trial
          </Button>
          <Button variant="outline" size="lg" className="h-14 px-10 text-lg font-bold rounded-full" client:visible>
            Talk to Sales
          </Button>
        </div>
        <p class="text-sm font-bold text-muted-foreground uppercase tracking-widest pt-4">
          No credit card required · Full features included · Cancel anytime
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes bounce-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .animate-bounce-slow {
    animation: bounce-slow 3s infinite ease-in-out;
  }
</style>