---
import { Button } from '@repo/ui';
import '../styles/globals.css';

// NexusPoint - Simple POS System Landing Page (Marketing Page)
// Style: Clean, Minimal, Professional
// Colors: White, Light Gray, Dark Gray, Soft Blue
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NexusPoint - Simple Point of Sale System</title>
    <meta name="description" content="NexusPoint is a simple, modern point-of-sale system that helps you sell faster, track inventory, and keep customers happy." />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body>
    <style>
    :root {
      --primary: #2563EB;
      --primary-light: #3B82F6;
      --gray-50: #F9FAFB;
      --gray-100: #F3F4F6;
      --gray-200: #E5E7EB;
      --gray-400: #9CA3AF;
      --gray-600: #4B5563;
      --gray-900: #111827;
    }

    /* Scroll Reveal */
    .reveal {
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.6s ease-out;
    }

    .reveal.active {
      opacity: 1;
      transform: translateY(0);
    }

    /* Stagger children */
    .stagger-children > * {
      opacity: 0;
      transform: translateY(16px);
    }

    .stagger-children.active > *:nth-child(1) { transition-delay: 0.1s; }
    .stagger-children.active > *:nth-child(2) { transition-delay: 0.2s; }
    .stagger-children.active > *:nth-child(3) { transition-delay: 0.3s; }
    .stagger-children.active > *:nth-child(4) { transition-delay: 0.4s; }

    .stagger-children.active > * {
      opacity: 1;
      transform: translateY(0);
      transition: all 0.5s ease-out;
    }

    /* Simple card hover effect */
    .card-hover {
      transition: all 0.2s ease;
    }

    .card-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    }
  </style>

  <main class="bg-white text-gray-900 min-h-screen">

    <!-- Navigation - Clean and Simple -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-sm border-b border-gray-100">
      <div class="max-w-6xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <!-- Logo - Simple text -->
          <a href="/" class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-lg bg-blue-600 flex items-center justify-center">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                <circle cx="12" cy="12" r="3"/>
                <path d="M12 2v4M12 18v4M2 12h4M18 12h4"/>
              </svg>
            </div>
            <span class="text-lg font-semibold text-gray-900">NexusPoint</span>
          </a>

          <!-- Nav Links - Simple English -->
                     <div class="hidden md:flex items-center gap-8">
                      <a href="#features" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Features</a>
                      <a href="#how-it-works" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">How it Works</a>
                      <a href="/pricing" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Pricing</a>
                      <a href="#devices" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Devices</a>
                    </div>
          <!-- CTA - Simple button -->
          <div class="flex items-center gap-4">
            <a href="#" class="hidden sm:block text-sm text-gray-600 hover:text-gray-900">Sign In</a>
            <Button
              size="sm"
              className="bg-blue-600 hover:bg-blue-700 text-white rounded-lg px-4 border-0 text-sm"
              client:visible
            >
              Get Started
            </Button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section - Clean and Simple -->
    <section class="relative pt-32 pb-20 lg:pt-40 lg:pb-32">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

          <!-- Left: Content -->
          <div class="reveal">
            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-blue-50 border border-blue-100 mb-6">
              <span class="w-1.5 h-1.5 rounded-full bg-blue-600"></span>
              <span class="text-xs font-medium text-blue-700">Simple & Reliable</span>
            </div>

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold leading-tight mb-6 text-gray-900">
              Run your store<br/>
              <span class="text-blue-600">the simple way.</span>
            </h1>

            <p class="text-lg text-gray-600 max-w-lg mb-8 leading-relaxed">
              NexusPoint is a simple, modern point-of-sale system that helps you sell faster,
              track inventory, and keep customers happy. Works on any device.
            </p>

            <div class="flex flex-wrap gap-4">
              <Button
                size="lg"
                className="bg-blue-600 hover:bg-blue-700 text-white rounded-lg px-6 border-0"
                client:visible
              >
                Start Free Trial
              </Button>
              <Button
                variant="outline"
                size="lg"
                className="rounded-lg px-6 border-gray-300 text-gray-700 hover:bg-gray-50"
                client:visible
              >
                Watch Demo
              </Button>
            </div>

            <!-- Stats - Simple and Clean -->
            <div class="grid grid-cols-3 gap-6 mt-12 pt-8 border-t border-gray-200">
              <div>
                <div class="text-2xl font-semibold text-gray-900">40%</div>
                <div class="text-sm text-gray-500 mt-1">Less waste</div>
              </div>
              <div>
                <div class="text-2xl font-semibold text-gray-900">3.2 sec</div>
                <div class="text-sm text-gray-500 mt-1">Avg checkout</div>
              </div>
              <div>
                <div class="text-2xl font-semibold text-gray-900">99.9%</div>
                <div class="text-sm text-gray-500 mt-1">Uptime</div>
              </div>
            </div>
          </div>

          <!-- Right: Simple Product Preview -->
          <div class="relative reveal" style="transition-delay: 0.2s;">
            <div class="bg-gray-50 rounded-2xl p-6 border border-gray-200 shadow-sm">
              <!-- Simple Demo UI -->
              <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                <!-- Header -->
                <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
                  <span class="font-medium text-gray-900">New Sale</span>
                  <span class="text-xs text-gray-500">Table 5</span>
                </div>
                <!-- Items -->
                <div class="p-4 space-y-3">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Coffee (Large)</span>
                    <span class="font-medium">$4.50</span>
                  </div>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Croissant</span>
                    <span class="font-medium">$3.25</span>
                  </div>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Orange Juice</span>
                    <span class="font-medium">$5.00</span>
                  </div>
                  <div class="border-t pt-3 mt-3">
                    <div class="flex items-center justify-between font-medium">
                      <span>Total</span>
                      <span class="text-blue-600">$12.75</span>
                    </div>
                  </div>
                </div>
                <!-- Actions -->
                <div class="px-4 pb-4">
                  <button class="w-full py-2.5 bg-blue-600 text-white rounded-lg text-sm font-medium">
                    Pay Now
                  </button>
                </div>
              </div>

              <!-- Floating Info Card -->
              <div class="absolute -bottom-4 -right-4 bg-white rounded-xl shadow-lg border border-gray-100 p-3">
                <div class="flex items-center gap-2">
                  <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center">
                    <svg class="w-4 h-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-xs font-medium text-gray-900">Payment received</div>
                    <div class="text-xs text-gray-500">$12.75</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- How It Works Section - Simple and Clean -->
    <section id="how-it-works" class="py-20 lg:py-32 bg-gray-50">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

          <!-- Left: Simple Dashboard Preview -->
          <div class="reveal order-2 lg:order-1">
            <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
              <!-- Simple Stats Card -->
              <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-100">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-lg bg-blue-50 flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-900">Today's Sales</div>
                    <div class="text-xs text-gray-500">Live updates</div>
                  </div>
                </div>
                <div class="flex items-center gap-2 px-2 py-1 rounded-full bg-green-50">
                  <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
                  <span class="text-xs text-green-600">+12%</span>
                </div>
              </div>

              <!-- Simple Chart -->
              <div class="h-40 flex items-end justify-between gap-2 px-2">
                <div class="w-full bg-blue-100 rounded-t" style="height: 40%"></div>
                <div class="w-full bg-blue-100 rounded-t" style="height: 60%"></div>
                <div class="w-full bg-blue-100 rounded-t" style="height: 45%"></div>
                <div class="w-full bg-blue-100 rounded-t" style="height: 80%"></div>
                <div class="w-full bg-blue-100 rounded-t" style="height: 65%"></div>
                <div class="w-full bg-blue-200 rounded-t" style="height: 55%"></div>
                <div class="w-full bg-blue-600 rounded-t" style="height: 90%"></div>
              </div>
              <div class="flex justify-between text-xs text-gray-400 mt-2 px-2">
                <span>Mon</span>
                <span>Tue</span>
                <span>Wed</span>
                <span>Thu</span>
                <span>Fri</span>
                <span>Sat</span>
                <span class="text-blue-600 font-medium">Sun</span>
              </div>

              <!-- Simple Insight -->
              <div class="mt-6 p-3 bg-blue-50 rounded-lg border border-blue-100">
                <div class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-blue-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <p class="text-sm text-blue-800">
                    Sundays are your busiest days. Stock extra pastries for next week.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Right: Content -->
          <div class="reveal order-1 lg:order-2">
            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-blue-50 border border-blue-100 mb-6">
              <svg class="w-4 h-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
              <span class="text-xs font-medium text-blue-700">Inventory Insights</span>
            </div>

            <h2 class="text-3xl md:text-4xl font-semibold leading-tight mb-6 text-gray-900">
              Know what to stock<br/>
              <span class="text-blue-600">before you run out.</span>
            </h2>

            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              NexusPoint tracks your sales patterns to suggest what to order.
              No more guessing. No more empty shelves.
            </p>

            <div class="space-y-4">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl bg-blue-50 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium mb-1 text-gray-900">Sales tracking</h3>
                  <p class="text-sm text-gray-500">See what sells best and when to restock</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl bg-blue-50 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium mb-1 text-gray-900">Reduce waste</h3>
                  <p class="text-sm text-gray-500">Order just enough. Cut spoilage and save money</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl bg-blue-50 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium mb-1 text-gray-900">Multi-store reports</h3>
                  <p class="text-sm text-gray-500">One simple summary for all your locations</p>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- Features Section - Clean Cards -->
    <section id="features" class="py-20 lg:py-32">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center max-w-2xl mx-auto mb-16 reveal">
          <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-blue-50 border border-blue-100 mb-6">
            <svg class="w-4 h-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <span class="text-xs font-medium text-blue-700">All-in-one</span>
          </div>

          <h2 class="text-3xl md:text-4xl font-semibold leading-tight mb-4 text-gray-900">
            Everything you need to<br/>
            <span class="text-blue-600">run your business.</span>
          </h2>

          <p class="text-lg text-gray-600">
            From scheduling to payroll, NexusPoint handles the daily tasks so you can focus on customers.
          </p>
        </div>

        <!-- Feature Cards - Clean Design -->
        <div class="grid md:grid-cols-3 gap-6 stagger-children">
          <!-- Staff Scheduling -->
          <div class="bg-white rounded-xl p-6 border border-gray-200 card-hover">
            <div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2 text-gray-900">Staff Scheduling</h3>
            <p class="text-gray-500 text-sm leading-relaxed mb-4">
              Build perfect schedules in minutes. Match staff to busy hours automatically.
            </p>
            <div class="flex items-center gap-1 text-sm text-blue-600">
              <span>Saves 8 hrs/week</span>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>

          <!-- Payroll -->
          <div class="bg-white rounded-xl p-6 border border-gray-200 card-hover">
            <div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2 text-gray-900">Payroll</h3>
            <p class="text-gray-500 text-sm leading-relaxed mb-4">
              Calculate wages, tips, and taxes. Direct deposit built in.
            </p>
            <div class="flex items-center gap-1 text-sm text-blue-600">
              <span>100% accurate</span>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>

          <!-- Kitchen Display -->
          <div class="bg-white rounded-xl p-6 border border-gray-200 card-hover">
            <div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2 text-gray-900">Kitchen Display</h3>
            <p class="text-gray-500 text-sm leading-relaxed mb-4">
              Keep kitchen orders organized by prep time. Food comes out perfectly timed.
            </p>
            <div class="flex items-center gap-1 text-sm text-blue-600">
              <span>30% faster service</span>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Simple Demo Preview -->
        <div class="mt-16 reveal">
          <div class="bg-gray-50 rounded-2xl p-8 border border-gray-200">
            <div class="grid md:grid-cols-2 gap-8 items-center">
              <div>
                <h3 class="text-xl font-semibold mb-3 text-gray-900">Kitchen orders, organized</h3>
                <p class="text-gray-600 mb-4">
                  Orders appear on screen with prep times. Kitchen staff know what to cook first.
                  Wait staff know when orders are ready.
                </p>
                <ul class="space-y-2 text-sm text-gray-600">
                  <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Color-coded by urgency
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Shows prep time estimates
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Works on any tablet
                  </li>
                </ul>
              </div>

              <!-- Simple Kitchen Display Preview -->
              <div class="bg-white rounded-xl p-4 border border-gray-200 shadow-sm">
                <div class="flex items-center justify-between mb-4 pb-3 border-b border-gray-100">
                  <span class="text-sm font-medium text-gray-900">Kitchen Orders</span>
                  <span class="text-xs text-green-600 flex items-center gap-1">
                    <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
                    Live
                  </span>
                </div>
                <div class="space-y-2">
                  <div class="flex items-center justify-between p-3 rounded-lg bg-yellow-50 border border-yellow-100">
                    <div>
                      <div class="text-sm font-medium text-gray-900">Table 4 · Risotto</div>
                      <div class="text-xs text-gray-500">Start in 5 min</div>
                    </div>
                    <span class="text-xs font-medium text-yellow-600">Waiting</span>
                  </div>
                  <div class="flex items-center justify-between p-3 rounded-lg bg-green-50 border border-green-100">
                    <div>
                      <div class="text-sm font-medium text-gray-900">Table 2 · Salad</div>
                      <div class="text-xs text-gray-500">Fire now</div>
                    </div>
                    <span class="text-xs font-medium text-green-600">Active</span>
                  </div>
